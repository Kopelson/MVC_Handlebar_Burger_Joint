{{!-- Bootstrap container --}}
<div class="container-fluid">
    {{!-- Bootstrap row --}}
    <div class="row mb-n4">
        {{!-- Bootstrap Jumbotron --}}
        <main class="col-12 jumbotron jumbotron-fluid">
            {{!-- Bootstrap container --}}
            <div class="container d-flex justify-content-center">
                <img src="/assets/img/burger.png">
                <h1 class="display-4">Eat A Burger!</h1>
                <img src="/assets/img/burger.png">
            </div>
        </main>
    </div>
    {{!-- Bootstrap row --}}
    <section class="row">
    {{!-- Bootstrap column --}}
    <div class="col-6 border-right border-dark overflow-auto margin-fix">
    <h2>Burger List:</h2>
    <ul class="list-group">
        {{#each burgers}}
            {{#unless devoured}}
        <li class="list-group-item">
            {{!-- Bootstrap row --}}
            <div class="row clearfix">
                {{!-- Bootstrap column --}}
                <h3 class="col-8 text-capitalize">{{burger_name}}</h3>
                {{!-- Bootstrap column --}}
                <button class="col-4 btn btn-success float-right change-devoured" data-id="{{id}}" data-devoured="1">Devour It!</button>
            </div> 
        </li>
            {{/unless}}
        {{/each}}
    </ul>
    </div>
    {{!-- Bootstrap column --}}
    <div class="col-6 margin-fix">
        <h2>Devoured List:</h2>
        <ul class="list-group">
            {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item-danger">
                    {{!-- Bootstrap row --}}
                    <div class="row clearfix">
                        {{!-- Bootstrap column --}}
                        <h3 class="col-11 text-capitalize"> {{burger_name}}</h3>
                        {{!-- Bootstrap column --}}
                        <button class="col-1 btn btn-danger float-right delete-burger" data-id="{{id}}" data-burger_name="{{burger_name}}">X</button>
                    </div>
                </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
    </section>
    {{!-- Bootstrap row --}}
    <section class="row mt-3 fixed-bottom white-background">
        <div class="container d-flex justify-content-center">
            {{!-- Bootstrap column --}}
            <form class="col-12 text-center" action="/api/burgers" method="post">
                {{!-- Bootstrap row --}}
                <div class="row">
                    {{!-- Bootstrap column --}}
                    <h2 class="col-12">Submit a new burger you want to eat!</h2>
                </div>
                {{!-- Bootstrap row --}}
                <div class="row">
                    {{!-- Bootstrap column --}}
                    <textarea class="col-12" name="burger_name"></textarea>    
                </div>
                {{!-- Bootstrap row --}}
                <div class="row  d-flex justify-content-center">
                    {{!-- Bootstrap column --}}    
                    <button class="col-6 btn btn-dark">Submit</button>     
                </div>
            </form>  
        </div>
    </section>
</div>
